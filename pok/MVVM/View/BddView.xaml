<UserControl x:Class="PokemonLikeProject.MVVM.View.BddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <TextBox Name="ConnectionStringTextBox" Width="300" Height="30" Margin="50,50,50,0" VerticalAlignment="Top"/>
        <Button Name="TestConnectionButton" Width="100" Height="30" Margin="150,100,150,0" VerticalAlignment="Top" Content="Connexion" Click="ConnectionButton_Click"/>
        <TextBlock Name="ConnectionStatusTextBlock" Width="300" Height="30" Margin="50,150,50,0" VerticalAlignment="Top" Text="Statut de la connexion"/>
    </Grid>
</UserControl>

